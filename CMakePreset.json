{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 20, "patch": 0 },
  "configurePresets": [
    {
      "name": "native-debug",
      "displayName": "Native (Debug)",
      "description": "Configure for native host build (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TARGET_PLATFORM": "native"
      }
    },
    {
      "name": "iot-avr",
      "displayName": "IoT AVR (Arduino Uno)",
      "description": "Configure for AVR cross compile (ATmega328P)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-avr",
      "toolchainFile": "${sourceDir}/cmake/toolchains/avr.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "TARGET_PLATFORM": "avr",
        "AVR_MCU": "atmega328p",
        "AVR_F_CPU": "16000000UL",
        "AVR_TOOLCHAIN_ROOT": "C:/Users/ASUS/AppData/Local/Arduino15/packages/arduino/tools/avr-gcc/7.3.0-atmel3.6.1-arduino7"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "native",
      "configurePreset": "native-debug",
      "jobs": 8
    },
    {
      "name": "iot-avr",
      "configurePreset": "iot-avr",
      "jobs": 2
    }
  ]
}
